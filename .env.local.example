# Shopify Storefront API Credentials
# Získejte z Shopify Admin -> Settings -> Apps and sales channels -> Develop apps

# Shopify Store Domain (např. your-store.myshopify.com)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify Storefront API Access Token
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Shopify API Version (doporučená aktuální verze)
NEXT_PUBLIC_SHOPIFY_API_VERSION=2025-01

# Base URL vaší aplikace
NEXT_PUBLIC_BASE_URL=http://localhost:3000
